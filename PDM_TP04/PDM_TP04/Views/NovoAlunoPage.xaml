<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDM_TP04.Views.NovoAlunoPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Text="{Binding Nome}" Placeholder="Nome" />
            <Entry Text="{Binding RM}" Placeholder="RM" />
            <Entry Text="{Binding Email}" Placeholder="E-mail" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnSalvar" Text="Salvar" Command="{Binding SalvarAluno}" Clicked="Listar" />
                <Button x:Name="btnCancelar" Text="Cancelar" Clicked="OnCancelar" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>